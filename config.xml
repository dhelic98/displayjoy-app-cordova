<?xml version='1.0' encoding='utf-8'?>
<widget id="com.displayjoy" version="1.0.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://phonegap.com/ns/1.0">
    <name>DisplayJoy</name>
    <description>
        The Fastest Way to get Your Content on a TV.
    </description>
    <author email="james@meetingroom365.com" href="https://www.meetingroom365.com/">
        James Futhey
    </author>
    <content src="index.html" />

    <access origin="*" subdomains="true" />
    <access origin="https://*.mr365.co/*" />
    <access origin="https://*.displayjoy.com/*" />
    <access origin="https://*.meetingroom365.com/*" />
    <access origin="https://login.microsoftonline.com/*" />
    <allow-intent href="*" />
    <allow-navigation href="*youtube*" />
    <allow-navigation href="*ytimg*" />
    <allow-navigation href="*" />
    <access origin="*" />

    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <access origin="*" />
        <allow-intent href="*" />
        <allow-intent href="market:*" />
        <preference name="android-minSdkVersion" value="19" />
        <preference name="android-targetSdkVersion" value="29" />
        <preference name="KeepRunning" value="true" />

        <icon qualifier="ldpi" src="res/icon/android/ldpi.png" />
        <icon qualifier="mdpi" src="res/icon/android/mdpi.png" />
        <icon qualifier="hdpi" src="res/icon/android/hdpi.png" />
        <icon qualifier="xhdpi" src="res/icon/android/xhdpi.png" />

        <splash density="ldpi" src="res/screen/android/screen-ldpi-landscape.png" />
        <splash density="mdpi" src="res/screen/android/screen-mdpi-landscape.png" />
        <splash density="hdpi" src="res/screen/android/screen-hdpi-landscape.png" />
        <splash density="xhdpi" src="res/screen/android/screen-xhdpi-landscape.png" />

        <icon density="xxhdpi" src="res/icon/android/xxhdpi.png"/>
        <icon density="xxxhdpi" src="res/icon/android/xxxhdpi.png"/>
    </platform>

    <preference name="MediaPlaybackRequiresUserAction" value="false" />
    <preference name="AllowInlineMediaPlayback" value="true" />
    <preference name="loadUrlTimeoutValue" value="120000" />
    <preference name="phonegap-version" value="cli-8.0.0" />
    <preference name="Fullscreen" value="true" />

    <plugin name="cordova-plugin-android-tv" spec="https://github.com/kidGodzilla/magikbee-cordova-plugin-android-tv.git" />
    <plugin name="cordova-restart-on-crash" spec="https://github.com/Meeting-Room-365/cordova-restart-on-crash.git" />
    <plugin name="cordova-plugin-network-information" spec="^2.0.2" />
    <plugin name="cordova-plugin-emm-app-config" spec="^1.0.2" />
    <plugin name="cordova-plugin-nativestorage" spec="^2.3.2" />
    <plugin name="cordova-plugin-cache-clear" spec="^1.3.7" />
    <plugin name="cordova-plugin-app-version" spec="^0.1.9" />
    <plugin name="cordova-plugin-brightness" spec="^0.2.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-autostart" spec="2.3.0" />
    <plugin name="cordova-plugin-insomnia" spec="~4.3.0" />
    <plugin name="cordova-plugin-device" spec="^2.0.0" />
    <plugin name="cordova-custom-config" spec="^5.1.0" />
    <engine name="android" spec="7.1.2" />

</widget>
